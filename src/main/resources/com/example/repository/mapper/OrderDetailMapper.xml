	<insert id = "insertOrderDetail" parameterType="OrderDetail">
	</insert>
	
<!-- 주문번호로 구매 상품 조회 -->
	<select id = "selectOrderDetailByOrderId" resultType="Order">
	</select>
	
<!-- 유저아이디로 주문번호 조회 -->
	<select id = "selectOrderListByUserID"  resultType ="String">
	</select>

